<h1>Produtos:</h1>

<div class="products">
    {{#each products}}
        <div class="product">
            <img src="{{this.image}}" alt="{{this.name}}" width="100px" height="100px">
            <h3>Nome: {{this.name}}</h3>
            <p>Pre√ßo R$: {{this.price}}</p>
            <div class="actions">
                <a href="/products/{{this._id}}">Detalhes</a>
                <a href="/products/edit/{{this._id}}">Editar</a>
            </div>
        </div>
    {{/each}}
</div>