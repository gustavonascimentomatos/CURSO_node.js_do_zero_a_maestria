<h1>Edição da Task: {{task.title}}</h1>
<form action="/tasks/add" method="POST">
    <input type="hidden" name="id" value="{{task.id}}">
    <div class="form-control">
        <label for="title">Título:</label>
        <input type="text" name="title" placeholder="Informe o título da tarefa" value="{{task.title}}">
    </div>
    <div class="form-control">
        <label for="description">Título:</label>
        <textarea name="description" placeholder="Descrição da tarefa...">{{task.description}}</textarea>
    </div>
    <input type="submit" value="Editar" id="criar-task">
</form>