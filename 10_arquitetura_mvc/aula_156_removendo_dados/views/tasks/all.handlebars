<h1>Todas as Tasks:</h1>

<ul class="task-list">
{{#each tasks}}
    <li>
        <a href="/" class="no-decoration title">{{this.title}}</a>
        <div class="actions">
            <a href="/"><i class="no-decoration bi bi-check2"></i></a>
            <a href="/"><i class="no-decoration bi bi-pencil-square"></i></a>
            <form action="/tasks/remove" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="no-decoration bi bi-x-lg"></i>
                </button>
            </form>
        </div>
    </li>
{{/each}}
</ul>


