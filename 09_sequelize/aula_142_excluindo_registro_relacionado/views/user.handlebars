<div>
    <h1>Usuário:</h1>

    <h2>Nome: {{user.name}}</h2>
    <h2>Profissão: {{user.occupation}}</h2>

    {{#if user.newsletter}}
        <h2>Assinante: Sim</h2>
    {{else}}
        <h2>Assinante: Não</h2>
    {{/if}}
    <div class="address-list">
        <h2 id="endereco-user">Endereços:</h2>
        {{#each user.Addresses}}
            <div id="p-user">{{this.id}} - {{this.pais}} - {{this.cep}} - {{this.estado}} - {{this.cidade}} - {{this.bairro}} - {{this.logradouro}} - {{this.numero}} - {{this.complemento}}
                <form action="/address/delete" method="POST">
                    <input type="hidden" name="UserId" value="{{this.UserId}}"> 
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Excluir">
                </form>
            </div>
        {{/each}}
    </div>
</div>